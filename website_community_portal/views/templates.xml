<odoo>

    <!-- Inherited Template For User NavBar -->
        <template id="user_navbar_inherited" name="User Navbar Inherited" inherit_id="website.user_navbar">
            <xpath expr="//nav[@id='oe_main_menu_navbar']" position="attributes">
                <attribute name="t-if">uid == 1</attribute>
            </xpath>
        </template>

        <!-- Inherited Template For WebSite Layout -->
        <template id="website_layout_inherited" inherit_id="website.layout" name="Main layout Extended">
            <xpath expr="//header/div" position="replace">
                <div class="navbar navbar-default" style="margin-bottom: 0px;">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-top-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="/" t-field="res_company.name"/>
                        </div>
                        <div class="collapse navbar-collapse navbar-top-collapse">
                            <ul class="nav navbar-nav navbar-right" id="top_menu">
                                <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                    <t t-if="(submenu.user_logged and request.uid !=  %(base.public_user)d) or (submenu.user_not_logged and request.uid == %(base.public_user)d)">
                                         <t t-call="website.submenu"/></t>
                                    </t>
                                <li class="divider" t-ignore="true" t-if="website.user_id != user_id"/>
                                <li class="dropdown" t-ignore="true" t-if="website.user_id != user_id">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <b>
                                            <span class="menu_list" t-esc="user_id.name"/>
                                            <span class="caret menu_list"></span>
                                        </b>
                                    </a>
                                    <ul class="dropdown-menu js_usermenu" role="menu">
                                        <li>
                                            <a href="/my/home" role="menuitem">My Account</a>
                                        </li>
                                        <li class="divider"/>
                                        <li>
                                            <a t-attf-href="/web/session/logout?redirect=/" role="menuitem">Logout</a>
                                        </li>
                                    </ul>
                                </li>
                                <!-- <li class="dropdown" t-if="not uid">
                                    <a href="/web/login" id="button-signin">
                                        <span class="menu_list">LOG IN</span>
                                    </a>
                                </li>
                                <li class="dropdown" t-if="not uid">
                                    <a href="/signup" id="button-signup">
                                        <button class="btn btn_signup center-block">SIGN UP</button>
                                    </a>
                                </li> -->
                            </ul>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>


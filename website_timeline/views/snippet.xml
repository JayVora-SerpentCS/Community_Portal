<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="custom_snippet_timeline" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <div>
                <!-- Thumbnail -->
                <div class="oe_snippet_thumbnail">
                    <img class="oe_snippet_thumbnail_img" src="/website_timeline/static/src/img/thumbnail.png" />
                    <span class="oe_snippet_thumbnail_title">Timeline</span>
                </div>
                <!-- Timeline -->
                <section class="oe_snippet_body mt16 mb16">
                    <div class="container">
                        <div class="page-header">
                            <h2>Timeline</h2>
                        </div>
                        <div class="timeline">
                            <div class="row">
                                <!-- Timeline nodes-->
                                <div class="col-md-0 node">
                                    <div class="timeline-badge"><span class="fa fa-suitcase fa-1x" style=""></span></div>
                                    <div class="timeline-panel">
                                        <div class="timeline-heading">
                                            <h4 class="timeline-title">Technical Training</h4>
                                            <p><small class="text-muted"><i class="fa fa-clock-o"></i> 9 hours ago via Google+</small></p>
                                        </div>
                                        <div class="timeline-body">
                                          <p>This course is dedicated to developers who need to grasp knowledge of the business applications development process. This course is for new developers or for IT professionals eager to learn more about technical aspects.</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-0 timeline-inverted node">
                                    <div class="timeline-badge warning"><span class="fa fa-suitcase fa-1x" style=""></span></div>
                                    <div class="timeline-panel">
                                        <div class="timeline-heading">
                                            <h4 class="timeline-title">Functional Webinar</h4>
                                            <p><small class="text-muted"><i class="fa fa-clock-o"></i> 11 hours ago via Twitter</small></p>
                                        </div>
                                        <div class="timeline-body">
                                            <p>This course is dedicated to developers who need to grasp knowledge of the business applications development process. This course is for new developers or for IT professionals eager to learn more about technical aspects.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </xpath>
    </template>

</odoo>
